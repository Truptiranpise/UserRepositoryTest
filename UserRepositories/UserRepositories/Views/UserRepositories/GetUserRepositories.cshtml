@model UserRepositories.Models.User

@{
    ViewBag.Title = "User Repositories";
}

<h2>User Repositories</h2>

<hr />
<h4>Search For User Repositories</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Repositories" class="btn btn-default" />
            </div>
        </div>
    </div>

    <hr />

    var user = ViewBag.result as UserRepositories.Models.User;
    if (user != null)
    {
        <h4>User Repository Info (Top 5)</h4>
        <hr />

        <table>
            <tbody>
                <tr> <td>@Html.LabelFor(model => user.Name) </td> <td>@Html.DisplayFor(model => user.Name)</td></tr>
                <tr><td> @Html.LabelFor(model => user.Location) </td> <td> @Html.DisplayFor(model => user.Location)</td></tr>
                <tr><td>@Html.LabelFor(model => user.Avatar_Url) </td><td> @Html.DisplayFor(model => user.Avatar_Url) </td></tr>
            </tbody>
        </table>


        if (user.Repositories.Count == 0)
        {
            <p>No repositories found for this user.</p>
        }
        else
        {
            <table>
                <thead>
                <tr>
                    <th style="border-style: groove">Repository Name</th>
                     <th style="border-style: groove">Stargazers Count</th>
                    <th style="border-style: groove">URL</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var repo in user.Repositories)
                    {
                        <tr>
                            <td style="border-style: groove">@repo.Name</td>
                            <td style="border-style: groove">@repo.Stargazers_count</td>
                            <td style="border-style: groove">@repo.Url</td>
                        </tr>

                    }
                </tbody>
            </table>
        }
    }
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
